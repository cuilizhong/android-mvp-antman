<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_tab_one"
    style="@style/MainTabLinStyle">


    <LinearLayout
        style="@style/MainTabLinStyle"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/img_main_tab_one"
        style="@style/MainTabImgStyle"
        android:src="@drawable/main_tab_one"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/txt_main_tab_one"
        style="@style/MainTabTxtStyle"
        android:text="@string/main_tab_message"
        android:layout_below="@+id/img_main_tab_one"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom" />
    </LinearLayout>
    <TextView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:text="8"
        android:textSize="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/circle_tv"
        android:layout_gravity="right|top" />

</FrameLayout>