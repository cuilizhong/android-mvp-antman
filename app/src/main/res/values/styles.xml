<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--ToolBar TextView颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/blue_500</item>
        <!--ToolBar标题栏的颜色-->
        <item name="colorPrimary">@color/blue_500</item>
          <!--设置波纹颜色 点击时变化后的显示颜色-->
        <item name="colorAccent">@color/transparent</item> <!--设置checkbox等控件的选中颜色-->
        <item name="selectableItemBackground">@drawable/selec_item_backg</item> <!--点击时变化的颜色-->
        <item name="android:selectableItemBackground">@drawable/selec_item_backg</item>
        <item name="android:selectable">@drawable/action_btn</item>
        <!--抽提-->
        <item name="drawerArrowStyle">@style/drawerArrowStyle</item>
        <!--默认app的背景颜色-->
        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColor">@color/white</item>

        <item name="android:tabWidgetStyle">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="drawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/blue_500</item>
    </style>

    <color name="accent_translucent">@color/white</color>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--MainTab LinearLayout 样式-->
    <style name="MainTabLinStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--MainTab image 样式-->
    <style name="MainTabImgStyle" parent="wrap_match">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>
    <!--MainTab Txt样式-->
    <style name="MainTabTxtStyle" parent="wrap_content">
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/main_tab_txt_one</item>
    </style>

</resources>
